.menu-nav{
  float: left;
  width: 19%;
  padding-top: 40px;
  color: rgba(0, 0, 0, .6);
  .menu-navItem{
    font-size: 14px;
    .menu-navItem-tit{
      padding-bottom: 5px;
      border-bottom: 1px solid #ddd;
      a{
        color: #333;
        font-size: 16px;
        text-decoration: none;
      }
    }
  }
  div.menu-navItem:nth-of-type(2), div.menu-navItem:nth-of-type(3){
    margin-top: 30px;
  }
}